{
  "files.exclude": {
    "**/node_modules": false
  },
  "search.exclude": {
    "**/node_modules": true,
    "pnpm-lock.yaml": true
  },
  // Ensure VSCode uses pnpm instead of npm
  "npm.packageManager": "pnpm",
  // Editor format mode
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode"
}
